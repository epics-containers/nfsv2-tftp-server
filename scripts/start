mkdir -p /run/sendsigs.omit.d

sed -i '/imklog/s/^/#/' /etc/rsyslog.conf
service rsyslog start

mkdir -p /tftpboot
chown -R nobody:nogroup /tftpboot
chmod -R 777 /tftpboot


echo "/exports/nfs_server 0.0.0.0/0.0.0.0(rw,sync,no_root_squash,insecure)" >> /etc/exports
echo "/autosave 0.0.0.0/0.0.0.0(rw,sync,no_root_squash,insecure)" >> /etc/exports

[ ! -f /etc/services ] && \
    echo "sunrpc          111/tcp         rpcbind portmap" >> /etc/services && \
    echo "sunrpc          111/udp         rpcbind portmap" >> /etc/services

cp /scripts/nfs-user-server-init /etc/init.d/nfs-user-server

service rpcbind start
bash /etc/init.d/nfs-user-server start

dnsmasq -p 0 --enable-tftp --tftp-single-port --tftp-root /tftpboot --log-facility=/var/log/syslog